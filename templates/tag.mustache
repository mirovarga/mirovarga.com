<!DOCTYPE html>

<html>

<head>
  {{> _head}}
  <title>Posts tagged '{{tag}}'</title>
</head>


<body>
  {{> _header}}

  <div class="content">
    <h1>Posts tagged '{{tag}}'</h1>

    {{#posts}}
    <article>
      <h1><a href="/{{key}}.html">{{title}}</a></h1>

      <em>
        {{created}}

        {{#tags}}
        <a href="/tags/{{lowerCase}}.html">{{camelCase}}</a>
        {{/tags}}
      </em>

      <p>{{description}}</p>
    </article>
    {{/posts}}
  </div>

  {{> _footer}}
</body>

</html>